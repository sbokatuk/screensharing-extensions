{
  "name" : "AgriSync Screen Sharing",
  "author": "AgriSync, Inc.",
  "version" : "2.0",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "This Chrome extension is developed primary for http://tokbox.com/. It doesn't do anything except capture content of your screen.",
  "homepage_url": "http://tokbox.com/",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://app.agrisync.com/*",
	  "http://localhost:50291/*",
	  "https://output.jsbin.com/*",
	  "https://wa-ags-devel.azurewebsites.net/*",
	  "https://wa-ags-dev.azurewebsites.net/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
